<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="josephpenrod.Flashcard2"
      android:versionCode="1"
      android:versionName="1.0">


<uses-permission android:name="android.permission.BROADCAST_STICKY"></uses-permission>
   <application android:icon="@drawable/icon" android:label="@string/app_name" android:permission="android.permission.BROADCAST_STICKY">
        <activity android:label="@string/app_name"
                   android:theme="@android:style/Theme.NoTitleBar" android:name=".Flashcardhost">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Flashcardmaker"  android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity android:name=".Flashcardloader"  android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity android:name="Flashcardviewer" android:theme="@android:style/Theme.Light.NoTitleBar"></activity>
    </application>
</manifest>